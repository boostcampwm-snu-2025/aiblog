{
  "name": "aiblog",
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "packages/*",
    "config/*"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint-all": "yarn workspaces foreach -A run lint",
    "dev": "concurrently -k \"yarn workspace client dev\" \"yarn workspace server dev\""
  }
}
